<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
            	#if($result && !$result.success)
            		对不起，文章不存在
            	#else
	            	<h3 style="text-align: center;margin-top: 12px;">$result.object.title</h3>
	                <p class="text-muted" 
	                style="font-size:12px;text-align: right;border-bottom: solid 1px #ddd">创建时间：$date.format("yyyy-MM-dd", $result.object.gmtCreate) 浏览量：
	                <span class="badge">3</span> </p>
	                <p>$result.object.content</p>
            	#end
                
            </div>
        </div>
    </div>
</div>